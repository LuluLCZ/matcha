<% include header %>




<script>

	var message;
	message = '';

</script>

<div class="ui segment">
	<h3 class="ui right floated header">Your discussion with <%=sendto%></h3>
	<br><hr>
	<div class="ui comments" style='height: 500px; overflow:scroll;'>
		<% message.forEach(function(element) { %>
			<% var content = element["content"] %>
			<% var name = element["login"] %>
			<% var date = element["at"] %>
			<% if (name == sendto) { %>
				<div class="ui comment">
					<div class="content">
						<a class="author"><%=sendto%></a>
						<div class="metadata">
							<span class="date">lol</span>
						</div>
						<div class="text">
							<%= content %>
						</div>
					</div>
				</div>
			<% } else { %>
				<div class="comment">
					<div class="content">
						<a class="author"><%=me%></a>
						<div class="metadata">
							<span class="date">lol</span>
						</div>
						<div class="text">
							<%= content %>
						</div>
					</div>
				</div>
			<% } %>
		<% }) %>
	</div>
		<form class="ui reply form" id="replymsg">
				<input type="text" class="message" id="message" maxlength="160" class="text"/>
				<input type="hidden" id="recup" value="<%=sendto %>" class="text"/>
				<input type="hidden" id="usr" value="<%=me %>" class="text"/>
				<input type="submit" class="ui primary submit button send" value="Envoyer" class="submit"/>
			</form>
</div>


<% include footer %>

<script>
	var socket = io.connect();
	$('#replymsg').submit(function(event) {
		console.log('========')
		socket.emit('newmsg', {message: $('#message').val(), recup: $('#recup').val(), usr: $('#usr').val() })
		$('#message').val('')
		$('#message').focus()
	})

</script>